  "version": "1.0",

  "lead_archetypes": {
    "female_leads": [
      {
        "name": "The Career Woman",
        "traits": ["ambitious", "organized", "workaholic"],
        "flaw": "puts work before relationships",
        "arc": "learns work-life balance",
        "pairs_well_with": ["The Free Spirit", "The Charmer"]
      },
      {
        "name": "The Dreamer",
        "traits": ["creative", "optimistic", "scattered"],
        "flaw": "head in the clouds, unrealistic",
        "arc": "grounds dreams in reality",
        "pairs_well_with": ["The Pragmatist", "The Grump"]
      },
      {
        "name": "The Cynic",
        "traits": ["sarcastic", "guarded", "independent"],
        "flaw": "afraid to trust/love again",
        "arc": "opens heart to love",
        "pairs_well_with": ["The Romantic", "The Persistent"]
      },
      {
        "name": "The Girl Next Door",
        "traits": ["kind", "relatable", "overlooked"],
        "flaw": "lacks confidence, people-pleaser",
        "arc": "finds her voice",
        "pairs_well_with": ["The Popular Guy", "The Best Friend"]
      }
    ],
    "male_leads": [
      {
        "name": "The Grump",
        "traits": ["grouchy", "secretly soft", "protective"],
        "flaw": "pushes people away",
        "arc": "softens and opens up",
        "pairs_well_with": ["The Sunshine", "The Dreamer"]
      },
      {
        "name": "The Charmer",
        "traits": ["flirtatious", "confident", "commitment-phobe"],
        "flaw": "afraid of real intimacy",
        "arc": "learns to be vulnerable",
        "pairs_well_with": ["The Cynic", "The Career Woman"]
      },
      {
        "name": "The Nerd",
        "traits": ["smart", "awkward", "sweet"],
        "flaw": "lacks confidence socially",
        "arc": "comes out of shell",
        "pairs_well_with": ["The Popular Girl", "The Outgoing One"]
      },
      {
        "name": "The Golden Retriever",
        "traits": ["friendly", "loyal", "enthusiastic"],
        "flaw": "too trusting, doormat tendencies",
        "arc": "learns boundaries",
        "pairs_well_with": ["The Cynic", "The Ice Queen"]
      }
    ]
  },

